<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        bootstrap="tests/boot.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        stopOnFailure="true">
    <testsuites>
        <testsuite name="T">
            <directory>tests/phpunit</directory>
        </testsuite>
    </testsuites>
</phpunit>
